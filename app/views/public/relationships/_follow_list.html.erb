<% if customers.exists? %>
  <% customers.each do |customer| %>
    <table class='table'>
      <thead>
        <tr>
          <th>name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= link_to customer.name, customer, class: "customer_#{customer.id}" %></td>
          <td>フォロー数: <%= customer.followings.count %></td>
          <td>フォロワー数: <%= customer.followers.count %></td>

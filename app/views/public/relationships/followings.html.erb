    <h2>フォロー <%= @customers.count %>人</h2>
    <div class="row d-flex justify-content-center mt-3">
      <div class="col-sm-10">
        <%= render "follow_list", customers: @customers %>
      </div>
    </div>
  </div>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
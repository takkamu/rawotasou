<!DOCTYPE html>
<html>
  <head>
    <title>Rawotasou</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-warning">
        <div class="container">
          <!--<#%= link_to root_path do %>-->
          <!--  <#%= image_tag 'logo_transparentnew.png', width:"240px", height:"100px" %>-->
          <!--<#% end %>-->

          <ul class="navbar-nav d-flex align-items-right">
            <% if customer_signed_in? %>
              <li >
                <%= render "public/searches/search_form" %>
              </li>
              <li>
                <%= link_to "マイページ", customers_path(current_customer), class: "btn btn-outline-light rounded-pill ml-2" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-danger rounded-pill ml-2" %>
              </li>

            <% elsif admin_signed_in? %>

              <li>
                <%= link_to "投稿一覧", admin_ramens_path, class: "btn btn-outline-light rounded-pill ml-2" %>
              </li>
              <li>
                <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-light rounded-pill ml-2" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-danger rounded-pill ml-2" %>
              </li>

            <% else %>

              <li>
              <%= link_to 'ゲストログイン（閲覧用）', customers_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
              </li>
              <li>
                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-primary rounded-pill ml-2" %>
              </li>
              <li>
                <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-primary rounded-pill ml-2" %>
              </li>

            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>

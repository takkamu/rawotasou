編集ページ

<div class="container mt-5">
  <div class="row">
    <div class="col-6 offset-3 text-center">
      <h2 class="font-weight-bold">会員情報編集</h2>
      <%= form_with(model: @customer, url:admin_customer_path, local: true, method: :patch) do |f| %>
        <div class="form-group text-left mt-3 col-8 offset-2">
          <%= f.label :name, "名前" %> <br>
          <%= f.text_field :name, class:"form-control form-control-lg" %>
        </div>
        <div class="form-group text-left mt-3 col-8 offset-2">
          <%= f.label :email, "メールアドレス" %> <br>
          <%= f.text_field :email, class:"form-control form-control-lg" %>
        </div>
        <div class="form-group text-left mt-3 col-8 offset-2">
          <%= f.radio_button :is_deleted, :true, class: "ml-2" %>
          <%= f.label :is_deleted, "退会" %>
          <%= f.radio_button :is_deleted, :false, class: "ml-2" %>
          <%= f.label :is_deleted, "有効" %>
        </div>
        <div class="form-group">
          <%= f.submit "保存", class: "btn btn-success col-sm-3", style: "margin: 20px;" %>
          <%= link_to '退会する', unsubscribe_path, class: "btn btn-danger col-sm-3", style: "margin: 20px;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>






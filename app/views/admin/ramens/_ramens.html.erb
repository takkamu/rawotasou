<% ramens.each do |ramen| %>
<div class="media border rounded-lg mb-1">
  <div class="p-3">
    <%= image_tag ramen.image, size:"250x200" %>
  </div>
  <div class="media-body p-3">
    <h4 class="mt-0"><%= ramen.restaurant_name %></h4>
    <p>
      [ <%= ramen.men_genre_i18n %> / <%= ramen.soup_genre_i18n %> ]
      <%= link_to admin_customer_path(ramen.customer) do %>
        <%= ramen.customer.name %>
      <% end %>
    </p>
    <p>
      <%= ramen.impression %>
    </p>
      <%= ramen.created_at.strftime("%Y年 %m月 %d日") %>
      <%= link_to '削除', admin_ramen_path(ramen), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
  </div>
</div>
<% end %>